<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="patient_form_view" model="ir.ui.view">
            <field name="name">hamadi_mohammed.patient.form</field>
            <field name="model">hamadi_mohammed.patient</field>
            <field name="arch" type="xml">
                <form string="patient">
                    <sheet>
                        <group>
                            <field name="matricule"/>
                            <field name="nom"/>
                            <field name="date_naissance"/>
                            <field name="age"/>
                            <field name="genre"/>
                            <field name="nbr_medicament"/>
                            <field name="consultations_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="patient_tree_view" model="ir.ui.view">
            <field name="name">hamadi_mohammed.patient.tree</field>
            <field name="model">hamadi_mohammed.patient</field>
            <field name="arch" type="xml">
                <tree string="patient">
                    <field name="matricule"/>
                    <field name="nom"/>
                    <field name="date_naissance"/>
                    <field name="age"/>
                    <field name="genre"/>
                    <field name="nbr_medicament"/>
                </tree>
            </field>
        </record>

        <record id="patient_act_window" model="ir.actions.act_window">
            <field name="name">patient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hamadi_mohammed.patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new patient.
                </p>
            </field>
        </record>
        <menuitem id="gestion_medical_menu"
			name="Patient"
			sequence="1"/>

        <menuitem name="patient"
                id="patient_menu"
                parent="gestion_medical_menu"
                action="patient_act_window"
        />

    </data>
</odoo>