<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="emprunt_ligne_form_view">
            <field name="name">emprunt_ligne.form.view</field>
            <field name="model">emprunt_ligne</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="emprunt_id" options="{'no_create': True}" />
                                <field name="livre_id" options="{'no_create': True}" />
                            </group>

                            <group>
                                <field name="isbn"/>
                                <field name="nbre_pages"/>
                                <field name="langue_livre"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="emprunt_ligne_list_view">
            <field name="name">emprunt_ligne.list.view</field>
            <field name="model">emprunt_ligne</field>
            <field name="arch" type="xml">
            
                <tree>
                    <field name="isbn"/>
                    <field name="nbre_pages"/>
                    <field name="langue_livre"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="emprunt_ligne_actions">
            <field name="name">Emprunt Ligne</field>
            <field name="res_model">emprunt_ligne</field>
            <field name="view_mode">tree,form</field>
            <field name="view type">form</field>
            <field name="view_id" ref="emprunt_ligne_list_view"/>
        </record>

        <menuitem id="emprunt_ligne" name="Emprunt Ligne" parent="gestion_bibliotheque" action="emprunt_ligne_actions"/>
    </data>
</odoo>
