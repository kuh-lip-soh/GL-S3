<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record model="ir.ui.view" id="auteur_form_view">
      <field name="name">auteur.form.view</field>
      <field name="model">auteur</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="nom" />
                <field name="prenom" />
                <field name="dateNaissance" />
              </group>
              <group>
                <field name="nationalite" />
                <field name="sexe" />
                <field name="livre_ids" widget="many2many_tags" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="auteur_list_view">
      <field name="name">auteur.list.view</field>
      <field name="model">auteur</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nom" />
          <field name="prenom" />
          <field name="dateNaissance" />
          <field name="nationalite" />
          <field name="sexe" />
        </tree>
      </field>
    </record>
    <record id="view_auteur_search" model="ir.ui.view">
      <field name="name">auteur.search</field>
      <field name="model">auteur</field>
      <field name="arch" type="xml">
        <search string="Auteur">
          <field name="nom" />
          <filter string="Auteur tunisiens" name="nationalite" domain="[('nationalite','=','Tunisienne')]" />
        </search>
      </field>
    </record>
    <record model="ir.actions.act_window" id="auteur_actions">
      <field name="name">Auteur</field>
      <field name="res_model">auteur</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="auteur_list_view" />
      <field name="search_view_id" ref="view_auteur_search" />
      <field name="view_id" ref="auteur_list_view" />
    </record>
    <menuitem id="gestion_bib" name="Gestion de bibliothÃ¨que" />
    <menuitem id="auteur" name="Auteur" parent="gestion_bib" action="auteur_actions" />
  </data>
</odoo>