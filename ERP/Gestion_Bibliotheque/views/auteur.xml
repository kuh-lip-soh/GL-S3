<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="auteur_form_view">
            <field name="name">auteur.form.view</field>
            <field name="model">auteur</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="nom"/>
                                <field name="prenom"/>
                                <field name="date_naissance"/>
                            </group>
                            <group>
                                <field name="nationalite"/>
                                <field name="sexe"/>
                                <field name="livres" widget="many2many_tags" options="{'no_create': True}" />
                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="auteur_list_view">
            <field name="name">auteur.list.view</field>
            <field name="model">auteur</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nom"/>
                    <field name="prenom"/>
                    <field name="date_naissance"/>
                    <field name="nationalite"/>
                    <field name="sexe"/>
                </tree>
            </field>
        </record>

        <record id="view_auteur_search" model="ir.ui.view">
            <field name="name">auteur.search</field>
            <field name="model">auteur</field>
            <field name="arch" type="xml">
                <search string="Auteur Search">
                    <field name="nationalite"/>
                    <filter string="Nationalite" name="nationalite" domain="[('nationalite','=','Tunisien')]"/>
                    
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="auteur_actions">
            <field name="name">Auteur</field>
            <field name="res_model">auteur</field>
            <field name="view_mode">tree,form</field>
            <field name="view type">form</field>
            <field name="view_id" ref="auteur_list_view"/>
            <field name="search_view_id" ref="view_auteur_search"/>
        </record>

       

        <menuitem id="gestion_bibliotheque" name="Gestion de bibliotheque"/>
        <menuitem id="auteur" name="Auteur" parent="gestion_bibliotheque" action="auteur_actions"/>
    </data>
</odoo>
