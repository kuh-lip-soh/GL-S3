<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_livre_search" model="ir.ui.view">
      <field name="name">livre</field>
      <field name="model">livre</field>
      <field name="arch" type="xml">
        <search string="isbn">
          <field name="isbn" />
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="livre_form_view">
      <field name="name">livre.form.view</field>
      <field name="model">livre</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="titre" />
                <field name="isbn" />
                <field name="nbre_pages" />
              </group>
              <group>
                <!-- <field name="image_livre" /> -->
                <field name="langue_livre" />
                <field name="auteurs" widget="many2many_tags" />
                <field name="emprunt_lignes">
                  <tree editable="top">
                    <field name="emprunts" />
                  </tree>
                </field>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="livre_list_view">
      <field name="name">livre.list.view</field>
      <field name="model">livre</field>
      <field name="arch" type="xml">
        <tree editable="top">
          <field name="titre" />
          <field name="isbn" />
          <field name="nbre_pages" />
          <!-- <field name="image_livre" /> -->
          <field name="langue_livre" />
          <field name="auteurs" widget="many2many_tags" />
          <field name="emprunt_lignes">
            <tree editable="top">
              <field name="emprunts" />
            </tree>
          </field>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="livre_actions">
      <field name="name">Livre</field>
      <field name="res_model">livre</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="livre_list_view" />
      <field name="search_view_id" ref="view_livre_search" />
    </record>

    <menuitem id="gestion_bibliotheque" name="Gestion de bibliotheque"/>
    <menuitem id="livre" name="Livre" parent="gestion_bibliotheque" action="livre_actions" />

  </data>
</odoo>