<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="livre_form_view">
            <field name="name">livre.form.view</field>
            <field name="model">livre</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="titre" string="Titre"/>
                                <field name="langue_livre" string="Langue"/>
                                <field name="isbn" string="ISBN"/>
                                <field name="nbr_pages" string="Nombre de pages"/>
                                <field name="image_libre" string="Image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="livre_list_view">
            <field name="name">livre.list.view</field>
            <field name="model">livre</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="titre" />
                    <field name="langue_livre" />
                    <field name="isbn" />
                    <field name="nbr_pages" />
                    <field name="image_libre" />
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="livre_actions">
            <field name="name">Livre</field>
            <field name="res_model">livre</field>
            <field name="view_mode">tree,form</field>
            <field name="view type">form</field>
            <field name="view_id" ref="livre_list_view" />
        </record>

        <menuitem id="gestion_biblioteque" name="Gestion de bibliothÃ¨que " />
        <menuitem id="livre" name="Livre" parent="gestion_biblioteque" action="livre_actions" />
    </data>
</odoo>