<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="emprunteur_form_view">
      <field name="name">emprunteur.form.view</field>
      <field name="model">emprunteur</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="nom" />
                <field name="prenom" />
                <field name="date_naissance" />
              </group>
              <group>
                <field name="state" />
                <field name="sexe" />

                <field name="emprunts">
                  <tree editable="top">
                    <field name="date_debut" />
                    <field name="date_fin" />
                  </tree>
                </field>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="emprunteur_list_view">
      <field name="name">emprunteur.list.view</field>
      <field name="model">emprunteur</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nom" />
          <field name="prenom" />
          <field name="date_naissance" />
          <field name="state" />
          <field name="sexe" />
          <field name="emprunts" />
          <field name="nbrs_emprunts" />
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="emprunteur_actions">
      <field name="name">Emprunteur</field>
      <field name="res_model">emprunteur</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="emprunteur_list_view" />
    </record>

    <menuitem id="gestion_bibliotheque" name="Gestion de bibliothÃ¨que" />
    <menuitem id="emprunteur" name="Emprunteur" parent="gestion_bibliotheque" action="emprunteur_actions" />

  </data>
</odoo>