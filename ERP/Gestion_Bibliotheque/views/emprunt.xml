<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_emprunt_search" model="ir.ui.view">
      <field name="name">emprunt</field>
      <field name="model">emprunt</field>
      <field name="arch" type="xml">
        <search string="emprunteur">
          <field name="emprunteur" />
        </search>
      </field>
    </record>

    <record id="view_rendu_search" model="ir.ui.view">
      <field name="name">emprunt</field>
      <field name="model">emprunt</field>
      <field name="arch" type="xml">
        <search string="livre_ids">
          <field name="rendu" />
          <group expand="0" string="Group By">
            <filter string="rendu" name="rendu" domain="" context="{'group_by':'rendu'}" />
          </group>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="emprunt_form_view">
      <field name="name">emprunt.form.view</field>
      <field name="model">emprunt</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="date_debut" />
                <field name="date_fin" />
              </group>
              <group>
                <field name="rendu" />
                <field name="emprunteur" />
                <!-- <field name="livre_ids"/>  -->
                <field name="emprunt_ligne">
                  <tree editable="top">
                    <field name="isbn" />
                    <field name="nbre_pages" />
                    <field name="langue_livre" />
                    <field name="livres" />
                  </tree>
                </field>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="emprunt_list_view">
      <field name="name">emprunt.list.view</field>
      <field name="model">emprunt</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date_debut" />
          <field name="date_fin" />
          <field name="rendu" />
          <field name="emprunteur" />
          <!-- <field name="livre_ids"/>  -->
          <field name="emprunt_ligne">
            <tree editable="top">
              <field name="isbn" />
              <field name="nbre_pages" />
              <field name="langue_livre" />
              <field name="livres" />
            </tree>
          </field>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="emprunt_actions">
      <field name="name">Emprunt</field>
      <field name="res_model">emprunt</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="emprunt_list_view" />
      <field name="search_view_id" ref="view_emprunt_search" />
      <field name="search_view_id" ref="view_rendu_search" />
    </record>

    <menuitem id="gestion_bibliotheque" name="Gestion de bibliothÃ¨que" />
    <menuitem id="emprunt" name="Emprunt" parent="gestion_bibliotheque" action="emprunt_actions" />

  </data>
</odoo>