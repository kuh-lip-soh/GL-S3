<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="FstbankEJB">
	<jta-data-source>java:/fstbank</jta-data-source>
  	<class>entity.Banquier</class>
  	<class>entity.Client</class>
  	<class>entity.Compte</class>
  	<class>entity.ComptePart</class>
  	<class>entity.ComptePro</class>
  	<class>entity.Compte_Client</class>
  	<class>entity.Operations</class>
  	<class>entity.Retrait</class>
  	<class>entity.Virement</class>
  	<properties>
  		
  		<property name="javax.persistence.schema-generation.database.action" value="create"/>
  		<property name="hibernate.enable_lazy_load_no_trans" value="true"/>
  		
  	</properties>
	</persistence-unit>
</persistence>
